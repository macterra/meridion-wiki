	* locale/: de/LC_MESSAGES/phpwiki.mo, de/LC_MESSAGES/phpwiki.php,
	es/LC_MESSAGES/phpwiki.mo, es/LC_MESSAGES/phpwiki.php,
	nl/LC_MESSAGES/phpwiki.mo, nl/LC_MESSAGES/phpwiki.php, po/de.po,
